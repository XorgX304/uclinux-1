comment '--###-- CONSOLE UTILITIES --###--'
 bool ' chvt' CONFIG_USER_BUSYBOX_CHVT n
 bool ' clear' CONFIG_USER_BUSYBOX_CLEAR n
 bool ' deallocvt' CONFIG_USER_BUSYBOX_DEALLOCVT n
 bool ' dumpkmap' CONFIG_USER_BUSYBOX_DUMPKMAP n
 bool ' loadfont' CONFIG_USER_BUSYBOX_LOADFONT n
 bool ' loadkmap' CONFIG_USER_BUSYBOX_LOADKMAP n
 bool ' openvt' CONFIG_USER_BUSYBOX_OPENVT n
 bool ' reset' CONFIG_USER_BUSYBOX_RESET n
 bool ' resize' CONFIG_USER_BUSYBOX_RESIZE n
 if [ "$CONFIG_USER_BUSYBOX_RESIZE" = "y" ]; then
   bool '   print environment variables' CONFIG_USER_BUSYBOX_FEATURE_RESIZE_PRINT n
 fi
 bool ' setconsole' CONFIG_USER_BUSYBOX_SETCONSOLE n
 if [ "$CONFIG_USER_BUSYBOX_SET_CONSOLE" = "y" -a "$CONFIG_USER_BUSYBOX_GETOPT_LONG" = "y" ]; then
   bool '   Enable long options' CONFIG_USER_BUSYBOX_FEATURE_SETCONSOLE_LONG_OPTIONS n
 fi
 bool ' setkeycodes' CONFIG_USER_BUSYBOX_SETKEYCODES n
 bool ' setlogcons' CONFIG_USER_BUSYBOX_SETLOGCONS n
